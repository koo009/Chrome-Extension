{
  "manifest_version": 3,
  "name": "Harmonix Content Processor",
  "version": "1.0",
  "description": "Processes website content into audio",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "<all_urls>"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "exclude_matches": ["*://www.google.com/search*"],
    "js": ["content.js"],
    "run_at": "document_start"
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
