{
  "manifest_version": 3,
  "name": "Text to Song Generator",
  "version": "1.0",
  "description": "Scrapes text, summarizes it, and creates a song",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "exclude_matches": ["*://www.google.com/search*"],
    "js": ["content.js"],
    "run_at": "document_start"
  }],
  "action": {
    "default_popup": "popup.html"
  }
}
