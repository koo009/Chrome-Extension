{
  "manifest_version": 3,
  "name": "Website Text Scraper",
  "version": "1.0",
  "description": "Scrapes text from websites and saves to file",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  }
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["music.mp3"],
      "matches": ["<all_urls>"]
    }
  ]   
}
