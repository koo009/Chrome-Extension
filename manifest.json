{
  "manifest_version": 3,
  "name": "Website Scraper with Music",
  "version": "1.0",
  "description": "Scrapes text from websites and plays music",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "exclude_matches": [
      "*://www.google.com/search*",
      "*://google.com/search*"
    ],
    "js": ["content.js"],
    "run_at": "document_start"
  }],
  "web_accessible_resources": [{
    "resources": ["music.mp3", "popup.html"],
    "matches": ["<all_urls>"]
  }]
}
