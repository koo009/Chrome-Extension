{
  "manifest_version": 3,
  "name": "Website Text Scraper",
  "version": "1.0",
  "description": "Scrapes all text content from any website",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
