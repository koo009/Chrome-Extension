{
  "manifest_version": 3,
  "name": "Content Summarizer",
  "version": "1.0",
  "description": "Summarizes webpage content",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "<all_urls>"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "exclude_matches": ["*://www.google.com/search*"],
    "js": ["content.js"],
    "run_at": "document_start"
  }],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
